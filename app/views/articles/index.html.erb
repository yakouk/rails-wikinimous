<div class='bg-secondary bg-opacity-10 border-bottom'>
  <div class='d-flex justify-content-between align-items-center px-4 py-2'>
    <h5 class='text-secondary fw-normal'>Wikinimous</h1>
    <%= link_to 'New article', new_article_path, class: 'text-secondary text-decoration-none' %>
  </div>
</div>
<div class='container mx-auto py-2' style='width: 750px'>
<ul class='list-unstyled'>
  <% @articles.each do |a| %>
    <div class='mt-3'>
    <li><%= link_to a.title, article_path(a), class: 'text-dark fs-3 hover-effect' %></li>
    <li class= 'fw-light'><%= a.content %></li>
    </div>
  <% end %>
</ul>
</div>
